<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/radius_10_white"
    android:padding="@dimen/_20sdp">


    <TextView
        android:id="@+id/loan_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/medium_caption1"
        android:text="@string/loan_rate_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <loan.exchange.uikit.EditableSeekbarEdittext
        android:id="@+id/loan_edittext"
        style="@style/bold_caption4"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@null"
        android:imeOptions="actionDone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLines="1"
        android:text="@string/funding_text"
        android:textColor="@color/color_gray_five"
        android:textColorHint="@color/color_labels_secondary"
        android:textCursorDrawable="@drawable/input_text_cursor_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loan_title" />


    <SeekBar
        android:id="@+id/loan_rate"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:progressDrawable="@drawable/seekbar_bck"
        android:thumb="@drawable/ic_tump"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:splitTrack="false"
        android:thumbOffset="0dp"
        android:min="1"
        android:max="60"
        app:layout_constraintStart_toStartOf="@+id/loan_edittext"
        app:layout_constraintTop_toBottomOf="@+id/loan_edittext" />


    <TextView
        android:id="@+id/loan_left"
        style="@style/light_caption1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="1"
        android:textColor="@color/text_secondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loan_rate" />

    <TextView
        android:id="@+id/loan_right"
        style="@style/light_caption1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="30"
        android:textColor="@color/text_secondary"
        app:layout_constraintEnd_toEndOf="@+id/loan_rate"
        app:layout_constraintTop_toBottomOf="@+id/loan_rate" />

</androidx.constraintlayout.widget.ConstraintLayout>
