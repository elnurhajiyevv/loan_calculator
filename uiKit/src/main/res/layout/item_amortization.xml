<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    android:id="@+id/main_container"
    android:background="@color/color_pure_white">

    <loan.calculator.uikit.textview.AutofitTextView
        android:id="@+id/number"
        style="@style/regular_caption1"
        autofit:minTextSize="@dimen/_10sdp"
        android:singleLine="true"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <loan.calculator.uikit.textview.AutofitTextView
        android:id="@+id/period"
        style="@style/regular_caption1"
        autofit:minTextSize="@dimen/_10sdp"
        android:singleLine="true"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toStartOf="@+id/interest"
        app:layout_constraintBottom_toBottomOf="@+id/number"
        app:layout_constraintStart_toEndOf="@+id/number"
        app:layout_constraintTop_toTopOf="@+id/number"
        />

    <loan.calculator.uikit.textview.AutofitTextView
        android:id="@+id/interest"
        style="@style/regular_caption1"
        autofit:minTextSize="@dimen/_12sdp"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_height="match_parent"
        android:singleLine="true"
        app:layout_constraintEnd_toStartOf="@+id/principal"
        app:layout_constraintBottom_toBottomOf="@+id/period"
        app:layout_constraintStart_toEndOf="@+id/period"
        app:layout_constraintTop_toTopOf="@+id/period"
        tools:text="$12303340.50" />

    <loan.calculator.uikit.textview.AutofitTextView
        android:id="@+id/principal"
        style="@style/regular_caption1"
        autofit:minTextSize="@dimen/_12sdp"
        android:layout_width="0dp"
        android:singleLine="true"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="@+id/interest"
        app:layout_constraintEnd_toStartOf="@+id/balance"
        app:layout_constraintStart_toEndOf="@+id/interest"
        app:layout_constraintTop_toTopOf="@+id/interest"
        tools:text="$6234343.50" />

    <loan.calculator.uikit.textview.AutofitTextView
        android:id="@+id/balance"
        style="@style/regular_caption1"
        autofit:minTextSize="@dimen/_12sdp"
        android:layout_width="0dp"
        android:singleLine="true"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="@+id/principal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/principal"
        app:layout_constraintTop_toTopOf="@+id/principal"
        tools:text="$653000.50" />


</androidx.constraintlayout.widget.ConstraintLayout>