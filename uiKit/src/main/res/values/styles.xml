<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/color_pure_white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_calc</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.LoanAndroid</item>
    </style>

    <style name="Theme.LoanAndroid" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary</item>
        <item name="colorOnPrimary">@color/color_pure_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary</item>
        <item name="colorOnSecondary">@color/color_pure_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi ="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <!-- Customize your theme here. -->
    </style>
    <!--region Base button style -->
    <style name="Loan_Button_v2" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:letterSpacing">0</item>

        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@null</item>
    </style>
    <!--endregion-->

    <!--region Base button size style -->
    <style name="Loan_Button_Large_v2" parent="Loan_Button_v2">
        <item name="android:height">@dimen/_64sdp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="Loan_Button_Medium_v2" parent="Loan_Button_v2">
        <item name="android:height">@dimen/_48sdp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="Loan_Button_Small_v2" parent="Loan_Button_v2">
        <item name="android:height">@dimen/_40sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>
    <!--endregion-->

    <!--region Common buttons -->
    <style name="Loan_Button_Large_Primary_Filled" parent="Loan_Button_Large_v2">
        <item name="android:background">@drawable/button_primary_filled_background</item>
        <item name="android:textColor">@color/primary_filled_text_color</item>
    </style>

    <style name="Loan_Button_Medium_Primary_Filled" parent="Loan_Button_Medium_v2">
        <item name="android:background">@drawable/button_primary_filled_background</item>
        <item name="android:textColor">@color/primary_filled_text_color</item>
    </style>

    <style name="Loan_Button_Small_Primary_Filled" parent="Loan_Button_Small_v2">
        <item name="android:background">@drawable/button_primary_filled_background</item>
        <item name="android:textColor">@color/primary_filled_text_color</item>
    </style>

    <style name="Loan_Button_Large_Primary_Outlined" parent="Loan_Button_Large_v2">
        <item name="android:background">@drawable/button_primary_outlined_background</item>
        <item name="android:textColor">@color/primary_outlined_text_color</item>
    </style>

    <style name="Loan_Button_Medium_Primary_Outlined" parent="Loan_Button_Medium_v2">
        <item name="android:background">@drawable/button_primary_outlined_background</item>
        <item name="android:textColor">@color/primary_outlined_text_color</item>
    </style>

    <style name="Loan_Button_Small_Primary_Outlined" parent="Loan_Button_Small_v2">
        <item name="android:background">@drawable/button_primary_outlined_background</item>
        <item name="android:textColor">@color/primary_outlined_text_color</item>
    </style>


    <style name="Loan_Button_Large_Delete_Filled" parent="Loan_Button_Large_v2">
        <item name="android:background">@drawable/button_delete_filled_background</item>
        <item name="android:textColor">@color/delete_filled_text_color</item>
    </style>

    <style name="Loan_Button_Medium_Delete_Filled" parent="Loan_Button_Medium_v2">
        <item name="android:background">@drawable/button_delete_filled_background</item>
        <item name="android:textColor">@color/delete_filled_text_color</item>
    </style>

    <style name="Loan_Button_Small_Delete_Filled" parent="Loan_Button_Small_v2">
        <item name="android:background">@drawable/button_delete_filled_background</item>
        <item name="android:textColor">@color/delete_filled_text_color</item>
    </style>

    <style name="Loan_Button_Large_Delete_Outlined" parent="Loan_Button_Large_v2">
        <item name="android:background">@drawable/button_delete_outlined_background</item>
        <item name="android:textColor">@color/delete_outlined_text_color</item>
    </style>

    <style name="Loan_Button_Medium_Delete_Outlined" parent="Loan_Button_Medium_v2">
        <item name="android:background">@drawable/button_delete_outlined_background</item>
        <item name="android:textColor">@color/delete_outlined_text_color</item>
    </style>

    <style name="Loan_Button_Small_Delete_Outlined" parent="Loan_Button_Small_v2">
        <item name="android:background">@drawable/button_delete_outlined_background</item>
        <item name="android:textColor">@color/delete_outlined_text_color</item>
    </style>

    <!--endregion-->

    <style name="spinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>