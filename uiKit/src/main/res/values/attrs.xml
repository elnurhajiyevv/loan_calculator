<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="ExchangeSearchView">
        <attr name="exchangeSearchView_hint" format="string" />
    </declare-styleable>
    <declare-styleable name="EditableSeekBar">
        <attr name="esbTitleAppearance" format="reference" />
        <attr name="esbMax" format="integer" />
        <attr name="esbMin" format="integer" />
        <attr name="esbValue" format="integer" />
        <attr name="esbTitle" format="string" />
        <attr name="esbSelectAllOnFocus" format="boolean" />
        <attr name="esbAnimateSeekBar" format="boolean" />
        <attr name="esbEditTextWidth" format="dimension" />
        <attr name="esbEditTextFontSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="LoanToolbar">
        <attr name="loan_toolbar_title" format="string" />
        <attr name="loan_toolbar_right_action_icon" format="reference" />
        <attr name="loan_toolbar_left_action_icon" format="reference" />
        <attr name="loan_toolbar_delete_action_icon" format="reference" />
        <attr name="loan_toolbar_option" format="enum">
            <enum name="with_left_and_right" value="0" />
            <enum name="with_left" value="1" />
            <enum name="with_right" value="2" />
            <enum name="with_full" value="3" />
            <enum name="with_full_right" value="4" />
            <enum name="without_left_and_right" value="5" />
        </attr>
        <attr name="android:textStyle" tools:ignore="ResourceName" />
    </declare-styleable>

    <declare-styleable name="TemplateView">
        <attr name="gnt_template_type" format="reference"/>
    </declare-styleable>

    <declare-styleable name="LoanButton">
        <attr name="android:text" format="string" />
        <attr name="android:enabled" format="boolean"/>
        <attr name="button_special_type" format="enum">
            <enum name="menu_button" value="0"/>
            <enum name="back_button" value="1"/>
        </attr>
        <attr name="icon_alignment" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="AutofitTextView">
        <!-- Minimum size of the text. -->
        <attr name="minTextSize" format="dimension" />
        <!-- Amount of precision used to calculate the correct text size to fit within its
        bounds. Lower precision is more precise and takes more time. -->
        <attr name="precision" format="float" />
        <!-- Defines whether to automatically resize text to fit to the view's bounds. -->
        <attr name="sizeToFit" format="boolean" />
    </declare-styleable>
</resources>