<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- color, size, shape height of seekbar -->
    <item android:gravity="center_vertical">
        <shape android:shape="rectangle">
            <solid android:color="#E5E7EC"/>
            <size android:height="@dimen/_6sdp"/>
            <corners android:radius="@dimen/_16sdp"/>
        </shape>
    </item>
    <!-- color, size, shape height of seekbar when u drag it-->
    <item android:gravity="center_vertical">
        <scale android:scaleWidth="100%">
            <selector>
                <item android:state_enabled="false"
                    android:drawable="@drawable/ic_tump"/>
                <item>
                    <shape android:shape="rectangle">
                        <solid android:color="#29BBCF"/>
                        <size android:height="@dimen/_7sdp"/>
                        <corners android:radius="@dimen/_16sdp"/>
                    </shape>
                </item>
            </selector>
        </scale>
    </item>
</layer-list>