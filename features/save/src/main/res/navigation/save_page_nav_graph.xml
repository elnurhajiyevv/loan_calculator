<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/save_page_nav_graph"
    app:startDestination="@id/savePageFragment">

    <fragment
        android:id="@+id/savePageFragment"
        android:name="loan.calculator.save.view.SavePageFragment"
        tools:layout="@layout/fragment_save_page">
        <deepLink
            android:id="@+id/deepLink"
            app:uri="loan://save" />
        <action
            android:id="@+id/action_savePageFragment_to_savedAmortizationFragment"
            app:destination="@id/savedAmortizationFragment" />
        <action
            android:id="@+id/action_savePageFragment_to_savePdfFragment"
            app:destination="@id/savePdfFragment" />

    </fragment>
    <fragment
        android:id="@+id/savedAmortizationFragment"
        android:name="loan.calculator.save.view.SavedAmortizationFragment"
        tools:layout="@layout/fragment_saved_amortization">

        <argument
            android:name="loanInfo"
            app:argType="loan.calculator.domain.entity.home.LoanInfo" />

        <deepLink
            android:id="@+id/deepLink"
            app:uri="loan://savedamortization/{loanInfo}" />

    </fragment>
    <fragment
        android:id="@+id/savePdfFragment"
        android:name="loan.calculator.save.view.SavePdfFragment"
        tools:layout="@layout/fragment_save_pdf_page" >

        <argument
            android:name="getSavedLoanModel"
            app:argType="loan.calculator.domain.entity.saved.GetSavedLoanModel" />

    </fragment>

</navigation>