<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/header_title"
        style="@style/bold_caption6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:gravity="center"
        android:text="@string/currency_header"
        android:textColor="#1F2261"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startAppBanner" />

    <TextView
        android:id="@+id/header_description"
        style="@style/light_caption3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:text="@string/currency_description"
        android:textColor="#808080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/radius_10"
        android:paddingTop="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_20sdp"
        android:paddingBottom="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="@+id/header_title"
        app:layout_constraintStart_toStartOf="@+id/header_title"
        app:layout_constraintTop_toBottomOf="@+id/header_description">

        <TextView
            android:id="@+id/amount_title"
            android:layout_width="wrap_content"
            style="@style/regular_caption1"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:text="@string/amount_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/amount_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_22sdp"
            app:layout_constraintEnd_toEndOf="@+id/middle"
            app:layout_constraintStart_toStartOf="@+id/amount_title"
            app:layout_constraintTop_toBottomOf="@+id/amount_title">

            <ImageView
                android:id="@+id/amount_image"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                tools:src="@drawable/ic_united_states"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/amount_text"
                style="@style/medium_caption2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center"
                tools:text="@string/usd"
                android:textColor="#26278D"
                app:layout_constraintBottom_toBottomOf="@+id/amount_image"
                app:layout_constraintStart_toEndOf="@+id/amount_image"
                app:layout_constraintTop_toTopOf="@+id/amount_image" />

            <ImageView
                android:id="@+id/amount_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:src="@drawable/ic_arrow_down"
                app:layout_constraintBottom_toBottomOf="@+id/amount_text"
                app:layout_constraintStart_toEndOf="@+id/amount_text"
                app:layout_constraintTop_toTopOf="@+id/amount_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/amount_edittext_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/_4sdp"
            android:background="@drawable/radius_8dp"
            app:layout_constraintBottom_toBottomOf="@+id/amount_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/amount_container"
            app:layout_constraintTop_toTopOf="@+id/amount_container">

            <EditText
                android:id="@+id/amount_edittext"
                style="@style/bold_caption2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@null"
                android:gravity="end|center_vertical"
                android:hint="0.00"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:maxLength="12"
                android:paddingRight="@dimen/_10sdp"
                android:textColor="#3C3C3C"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart1"
            android:layout_width="0dp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintEnd_toStartOf="@+id/middle"
            app:layout_constraintStart_toStartOf="@+id/amount_container"
            app:layout_constraintTop_toBottomOf="@+id/amount_container" />


        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_2sdp"
            android:background="#E7E7EE"
            app:layout_constraintBottom_toBottomOf="@+id/middle"
            app:layout_constraintStart_toStartOf="@+id/amount_container"
            app:layout_constraintTop_toTopOf="@+id/middle" />

        <ImageView
            android:id="@+id/middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/ic_middle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amount_container" />

        <TextView
            android:id="@+id/converted_amount_title"
            style="@style/regular_caption1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/converted_amount_text"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/middle" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/converted_amount_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_22sdp"
            app:layout_constraintEnd_toEndOf="@+id/middle"
            app:layout_constraintStart_toStartOf="@+id/converted_amount_title"
            app:layout_constraintTop_toBottomOf="@+id/converted_amount_title">

            <ImageView
                android:id="@+id/converted_amount_image"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                tools:src="@drawable/ic_european_union"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/converted_amount_text"
                style="@style/medium_caption2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center"
                tools:text="@string/euro"
                android:textColor="#26278D"
                app:layout_constraintBottom_toBottomOf="@+id/converted_amount_image"
                app:layout_constraintStart_toEndOf="@+id/converted_amount_image"
                app:layout_constraintTop_toTopOf="@+id/converted_amount_image" />

            <ImageView
                android:id="@+id/converted_amount_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:src="@drawable/ic_arrow_down"
                app:layout_constraintBottom_toBottomOf="@+id/converted_amount_text"
                app:layout_constraintStart_toEndOf="@+id/converted_amount_text"
                app:layout_constraintTop_toTopOf="@+id/converted_amount_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/converted_amount_edittext_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/_4sdp"
            android:background="@drawable/radius_8dp"
            app:layout_constraintBottom_toBottomOf="@+id/converted_amount_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/converted_amount_container"
            app:layout_constraintTop_toTopOf="@+id/converted_amount_container">

            <EditText
                android:id="@+id/converted_amount_edittext"
                android:layout_width="0dp"
                android:layout_height="0dp"
                style="@style/bold_caption2"
                android:background="@null"
                android:paddingRight="@dimen/_10sdp"
                android:gravity="end|center_vertical"
                android:textColor="#3C3C3C"
                android:hint="0.00"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:maxLength="12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/indicative_title"
        android:layout_width="0dp"
        style="@style/regular_caption1"
        android:layout_height="wrap_content"
        android:text="@string/indicative_header"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="@+id/main_container"
        app:layout_constraintStart_toStartOf="@+id/main_container"
        app:layout_constraintTop_toBottomOf="@+id/main_container" />

    <TextView
        android:id="@+id/exchange_rate"
        style="@style/medium_caption1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/color_pure_black"
        app:layout_constraintEnd_toEndOf="@+id/main_container"
        app:layout_constraintStart_toStartOf="@+id/indicative_title"
        app:layout_constraintTop_toBottomOf="@+id/indicative_title"
        tools:text="1 USD = 0.94 EUR" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_converted_currency"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/main_container"
        app:layout_constraintStart_toStartOf="@+id/main_container"
        app:layout_constraintTop_toBottomOf="@+id/exchange_rate"
        tools:itemCount="4"
        tools:listitem="@layout/item_converted_currency" />

    <com.startapp.sdk.ads.banner.Banner
        android:id="@+id/startAppBanner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_35sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>